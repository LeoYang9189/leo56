page {
  background: #F6F6F6;
}

.container {
  padding: 0;
  margin-top: calc(var(--menu-button-height) + var(--menu-button-top));
}

/* 搜索框 */
.search-container {
  padding: 16rpx 0;
  margin-bottom: 8rpx;
}

.search-box {
  position: relative;
  width: 700rpx;
  margin: 0 auto;
  background: #F6F6F6;
  border-radius: 32rpx;
  border: 1rpx solid #E0E0E0;
}

input {
  width: 100%;
  height: 72rpx;
  padding: 0 72rpx 0 32rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: transparent;
}

.search-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
}

.placeholder-style {
  color: #999999;
}

/* 金刚区 */
.quick-actions {
  background: #FFFFFF;
  margin-bottom: 8rpx;
  padding: 24rpx 0;
}

.quick-actions-inner {
  width: 700rpx;
  margin: 0 auto;
  padding: 0 32rpx;
}

.action-items {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.action-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 16rpx;
}

.action-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 8rpx;
}

.action-item text {
  font-size: 24rpx;
  color: #333333;
}

.customize-btn {
  text-align: right;
  color: #3498db;
  font-size: 24rpx;
  padding: 8rpx 0;
}

/* 数据统计 */
.stats-panel {
  background: #FFFFFF;
  margin-bottom: 8rpx;
  padding: 24rpx 0;
}

.stats-inner {
  width: 700rpx;
  margin: 0 auto;
  padding: 0 32rpx;
}

.panel-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 24rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  padding: 0 20rpx;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-item .num {
  font-size: 36rpx;
  color: #3498db;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stats-item .label {
  font-size: 24rpx;
  color: #666666;
}

/* 待办事项 */
.todo-panel {
  background: #FFFFFF;
  padding: 24rpx 0;
}

.todo-inner {
  width: 700rpx;
  margin: 0 auto;
  padding: 0 32rpx;
}

.todo-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #EEEEEE;
}

.todo-item:last-child {
  border-bottom: none;
}

.todo-tag {
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.todo-tag.urgent {
  background: #fff2f0;
  color: #ff4d4f;
}

.todo-tag.normal {
  background: #e6f7ff;
  color: #3498db;
}

.todo-content {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  padding-right: 16rpx;
}

.todo-time {
  font-size: 24rpx;
  color: #999999;
  margin-left: 12rpx;
}

/* 紧急待办项添加蓝色标识 */
.todo-item.urgent::before {
  content: '';
  position: absolute;
  left: -24rpx;
  top: 0;
  width: 8rpx;
  height: 100%;
  background: #1296db;
} 